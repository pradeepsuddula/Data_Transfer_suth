<Window x:Class="Data_Transfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_Transfer"
        mc:Ignorable="d"
        Title="Data Transfer" Height="450" Width="800">

    <!-- Window Resources -->
    <Window.Resources>
        <!-- Brush Resources -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#4e729c"/>
        <SolidColorBrush x:Key="BorderColor" Color="Green"/>
        <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

        <!-- TextBlock Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="PrimaryTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderBrush" Value="Green"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Grid Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryColor}">
            <TextBlock Text="Data Transfer" Style="{StaticResource HeaderTextStyle}"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Data Transfer Section -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Data Input Section -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Send Data Row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="sendDataBtn"
                                Content="Send Data"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SendDataCommand}"
                                Grid.Column="0"/>

                        <TextBox x:Name="sendDatatext"
                                 Style="{StaticResource PrimaryTextBoxStyle}"
                                 Text="{Binding InputData, UpdateSourceTrigger=PropertyChanged}"
                                 MaxLength="16"
                                 Grid.Column="1"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 />
                    </Grid>

                    <!-- Receive Data Row -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Content="Receive Data" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ReceiveDataCommand}"
                                Grid.Column="0"/>

                        <TextBox Style="{StaticResource PrimaryTextBoxStyle}"
                                 Text="{Binding ReceivedData, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Grid.Column="1"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="{StaticResource PrimaryColor}"/>
    </Grid>
</Window>
